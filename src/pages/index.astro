---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<section id="hero" class="hero-section text-center py-20">
				<h1 class="text-4xl font-bold mb-4">Hi, I’m Tony Zharoff</h1>
				<h2 class="text-2xl font-medium mb-6">Game Designer, Developer, & Mentor Helping You Build Better Games</h2>
				<p class="max-w-xl mx-auto mb-8">
					I help teams, studios, and students go from idea to launch — with clean code, clever design, and real-world game dev experience.
				</p>
				<a href="/contact" class="inline-block bg-accent text-white py-3 px-6 rounded-2xl shadow-lg hover:bg-accent-dark transition">
					Let’s Work Together
				</a>
			</section>
		</main>
		<Footer />
	</body>
</html>
